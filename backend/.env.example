# Application Settings
APP_NAME=LLM Security Detection Tool
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
API_V1_PREFIX=/api/v1

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Settings
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/llm_security
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Settings
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# Security Settings
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Detection Settings
DETECTION_MODEL_PATH=./models
DETECTION_CACHE_ENABLED=True
DETECTION_CACHE_TTL=3600
MAX_REQUEST_SIZE=10485760
MAX_BATCH_SIZE=32

# Performance Settings
ENABLE_ASYNC_PROCESSING=True
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

# Monitoring Settings
ENABLE_METRICS=True
METRICS_PORT=9090
ENABLE_TRACING=False

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_ROTATION=500 MB
LOG_RETENTION=10

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=Asia/Shanghai

# Email Settings (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@llmsecurity.com
EMAILS_FROM_NAME=LLM Security Tool

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100
